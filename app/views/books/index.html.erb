<div class="container">
  <%= render 'shared/flash_message' %>
  <%= render 'shared/error_message', user: @book %>
  <div class="row">
    <div class="col-md-3 p-3">
      <%= render 'shared/user_info', book: @book, user: current_user %>
    </div>

    <div class="col-md-8 offset-md-1 p-3">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user_id) do %>
                  <%= image_tag book.user.get_profile_image %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>