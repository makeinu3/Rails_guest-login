<h1>User info</h1>
<%= link_to "Edit", edit_user_path(current_user.id) %>


<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
    <%= f.text_field :title %>
  <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit "Create Book" %>
<% end %>


<h1>Users</h1>
<table>
  <thead>
    <tr>
      <th><image/th>
      <th>name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag 'sample-author1.jpg' %></td> <!-- あとで変える -->
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
