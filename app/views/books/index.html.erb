<div class="container">
  <div class="row">
    <div class="col-lg-3 p-3">
      <h2>User info</h2>
      <p><%= image_tag current_user.get_profile_image %></p>
      <table class="table">
        <tr>
          <th>name</th><td><%= current_user.name %></td>
        </tr>
        <tr>
          <th>introduction</th><td><%= current_user.introduction %></td>
        </tr>
      </table>

      <div class="row">
        <div class="col">
          <div class="actions">
            <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-info btn-sm btn-block" do %>
              <i class="fas fa-user-edit"></i>
            <% end %>
          </div>
        </div>
      </div>

      <h2 class="mt-5">New book</h2>
      <%= form_with model: @book do |f| %>
        <p>Title</p>
        <p><%= f.text_field :title %></p>
        <p>Opinion</p>
        <p><%= f.text_area :body %></p>
        <p><%= f.submit "Create Book", class: "btn btn-success" %></p>
      <% end %>
    </div>

    <div class="col-lg-8 offset-lg-1 p-3">
      <h1>Books</h1>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag 'sample-author1.jpg' %></td> <!-- あとで変える -->
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>