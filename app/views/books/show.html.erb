<div class="container">
  <div class="row">
    <div class="col-lg-3 p-3">
      <%= render 'shared/user_info', book: @new_book, user: @book.user %>
    </div>

    <div class="col-lg-8 offset-lg-1 p-3">
      <h2>Book detail</h2>
      <table class="table table-hover">
        <tr>
          <td>
            <%= image_tag @book.user.get_profile_image %><br>
            <%= link_to @book.user.name, user_path(@book.user_id) %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
            <td>
              <%= link_to edit_book_path(@book.id), class: "btn btn-success btn-sm" do %>
                Edit
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id), method: :delete, class: "btn btn-danger btn-sm" do %>
                Destroy
              <% end %>
            </td>
          <% end %>
        </tr>
      </table>
    </div>

  </div>
</div>