<div class="container">
  <div class="row">
    <div class="col-lg-3 p-3">
      <%= render 'shared/user_info', book: @book, user: current_user %>
    </div>

    <div class="col-lg-8 offset-lg-1 p-3">
      <h2>Users</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>
