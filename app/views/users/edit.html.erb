<div class="container">
  <div class="row">

    <div class="col-lg-5 mx-auto my-3">
      <h2>User info</h2>
      <br>
      <%= form_with model: @user do |f| %>
        <p><label for="inputName">Name</label></p>
        <p><%= f.text_field :name, autofocus: true, id:"inputName", size: 50 %></p>
        <p><label for="inputImage">Image</label></p>
        <p><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></p>
        <p><label for="inputIntroduction">Introduction</label></p>
        <p><%= f.text_area :introduction, size: "50x5" %></p>
        <p><%= f.submit "Update User", class: "btn btn-success" %></p>
      <% end %>
    </div>


  </div>
</div>