<h1>Book detail</h1>
<table>
  <tr>
    <td>
      <%= image_tag 'sample-author1.jpg' %><br /> <!-- あとで変える -->
      <%= @book.user.name %> <!-- あとでリンクにする -->
    </td>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>
    <% if @book.user == current_user %>
      <td><!-- Edit --></td>
      <td><%= link_to "Destroy", book_path(@book.id), method: :delete %></td>
    <% end %>
  </tr>
</table>